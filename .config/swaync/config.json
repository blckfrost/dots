{
    "$schema": "/etc/xdg/swaync/configSchema.json",
    "positionX": "right",
    "positionY": "top",
    "control-center-layer": "overlay",

    "control-center-margin-top": 8,
    "control-center-margin-right": 8,
    "control-center-margin-bottom": 8,
    "control-center-margin-left": 8,
    "control-center-width": 320,
    "control-center-height": 660,

    "notification-window-width": 340,
    "notification-margin": 4,
    "notification-icon-size": 42,

    "timeout": 5,
    "timeout-low": 4,
    "timeout-critical": 6,

    "fit-to-screen": true,
    "hide-on-clear": true,
    "hide-on-action": true,
    "widgets": ["title", "dnd", "notifications", "volume", "buttons-grid", "mpris"],
    "widget-config": {
        "title": {
            "text": "󰂚 Notifications",
            "clear-all-button": true,
            "button-text": "Clear All"
        },

        "dnd": {
            "text": "Do Not Disturb"
        },
        "volume": {
            "label": " 󰕾 "
        },
        "mpris": {
            "autohide": true,
            "show-album-art": "always",
            "loop-carousel": false
        },
        "buttons-grid": {
            "columns": 4,
            "actions": [
                {
                    "label": "",
                    "command": "hyprlock"
                },
                {
                    "label": "󰗽",
                    "command": "hyprctl dispatch exit"
                },
                {
                    "label": "󰐥",
                    "command": "systemctl poweroff"
                },
                {
                    "label": "󰜉",
                    "command": "systemctl reboot"
                }
            ]
        }
    }
}
